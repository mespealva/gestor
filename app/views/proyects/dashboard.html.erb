<p id="notice"><%= notice %></p>

<h1>Proyects</h1>
<%= form_with(model: @proyect, local: true, method: :get) do |form| %>
  <div class="field">
    <%= form.label :estado %>
    <%= form.select :estado, options_for_select(Proyect.estados) %>
    <%= form.submit 'filtrar' %> 
  </div>
<%end%>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Desc</th>
      <th>Fecha inicio</th>
      <th>Fecha termino</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyects.each do |proyect| %>
      <tr>
        <td><%= proyect.nombre %></td>
        <td><%= proyect.desc %></td>
        <td><%= proyect.fecha_inicio %></td>
        <td><%= proyect.fecha_termino %></td>
        <td><%= proyect.estado %></td>
        <td><%= link_to 'Show', proyect %></td>
        <td><%= link_to 'Edit', edit_proyect_path(proyect) %></td>
        <td><%= link_to 'Destroy', proyect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Proyect', new_proyect_path %>
